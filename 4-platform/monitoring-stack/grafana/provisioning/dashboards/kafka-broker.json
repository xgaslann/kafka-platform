{
  "id": null,
  "uid": "kafka-broker",
  "title": "Kafka Broker",
  "tags": ["kafka", "broker"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Total Replicas",
      "description": "Total partition replicas across all brokers (Partitions Ã— RF)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
      "targets": [{"expr": "sum(kafka_server_replicamanager_partitioncount)", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 2,
      "title": "Unique Partitions",
      "description": "Actual partition count (Total Replicas / RF)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
      "targets": [{"expr": "sum(kafka_server_replicamanager_leadercount)", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 3,
      "title": "Topic Count",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0},
      "targets": [{"expr": "count(count by (__name__) ({__name__=~\"kafka_server_brokertopicmetrics_messagesinpersec_topic_.+\"}))", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 4,
      "title": "Under Replicated Partitions",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0},
      "targets": [{"expr": "sum(kafka_server_replicamanager_underreplicatedpartitions)", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "red", "value": 1}]}}}
    },
    {
      "id": 5,
      "title": "Active Controller",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0},
      "targets": [{"expr": "sum(kafka_controller_kafkacontroller_activecontrollercount)", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 6,
      "title": "Broker Count",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 0},
      "targets": [{"expr": "count(up{job=\"kafka_broker\"} == 1)", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 7,
      "title": "Messages in topic-1",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 4},
      "targets": [{"expr": "sum(kafka_log_log_logendoffset_topic_topic_1_partition_0 or kafka_log_log_logendoffset_topic_topic_1_partition_1 or kafka_log_log_logendoffset_topic_topic_1_partition_2) / 3", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 8,
      "title": "Messages in topic-2",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 4},
      "targets": [{"expr": "sum(kafka_log_log_logendoffset_topic_topic_2_partition_0 or kafka_log_log_logendoffset_topic_topic_2_partition_1 or kafka_log_log_logendoffset_topic_topic_2_partition_2) / 3", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 9,
      "title": "Messages in topic-3",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 4},
      "targets": [{"expr": "sum(kafka_log_log_logendoffset_topic_topic_3_partition_0 or kafka_log_log_logendoffset_topic_topic_3_partition_1 or kafka_log_log_logendoffset_topic_topic_3_partition_2) / 3", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 10,
      "title": "Bytes In Per Sec",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [{"expr": "sum(rate(kafka_server_brokertopicmetrics_bytesinpersec_count_total[5m])) by (instance)", "legendFormat": "{{instance}}", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "Bps"}}
    },
    {
      "id": 11,
      "title": "Bytes Out Per Sec",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [{"expr": "sum(rate(kafka_server_brokertopicmetrics_bytesoutpersec_count_total[5m])) by (instance)", "legendFormat": "{{instance}}", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "Bps"}}
    },
    {
      "id": 12,
      "title": "Request Per Sec",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [{"expr": "sum(rate(kafka_network_requestmetrics_requestspersec_count_total[5m])) by (instance)", "legendFormat": "{{instance}}", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "reqps"}}
    },
    {
      "id": 13,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [{"expr": "100 - (avg by(hostname) (irate(node_cpu_seconds_total{mode=\"idle\", role=\"broker\"}[5m])) * 100)", "legendFormat": "{{hostname}}", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "percent", "max": 100}}
    },
    {
      "id": 14,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "targets": [{"expr": "(1 - (node_memory_MemAvailable_bytes{role=\"broker\"} / node_memory_MemTotal_bytes{role=\"broker\"})) * 100", "legendFormat": "{{hostname}}", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "percent", "max": 100}}
    },
    {
      "id": 15,
      "title": "Disk Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "targets": [{"expr": "(1 - (node_filesystem_avail_bytes{fstype!=\"tmpfs\", role=\"broker\", mountpoint=\"/\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\", role=\"broker\", mountpoint=\"/\"})) * 100", "legendFormat": "{{hostname}}", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "percent", "max": 100}}
    }
  ]
}
