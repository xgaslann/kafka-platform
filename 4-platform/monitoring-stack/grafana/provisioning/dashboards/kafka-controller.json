{
  "id": null,
  "uid": "kafka-controller",
  "title": "Kafka Controller",
  "tags": ["kafka", "controller"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Active Controller",
      "type": "stat",
      "gridPos": {"h": 4, "w": 8, "x": 0, "y": 0},
      "targets": [{"expr": "sum(kafka_controller_kafkacontroller_activecontrollercount)", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}]}}}
    },
    {
      "id": 2,
      "title": "Controller Count",
      "type": "stat",
      "gridPos": {"h": 4, "w": 8, "x": 8, "y": 0},
      "targets": [{"expr": "count(up{job=\"kafka_controller\"} == 1)", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 3,
      "title": "Active Broker Count",
      "type": "stat",
      "gridPos": {"h": 4, "w": 8, "x": 16, "y": 0},
      "targets": [{"expr": "max(kafka_controller_kafkacontroller_activebrokercount)", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
    {
      "id": 4,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 4},
      "targets": [{"expr": "100 - (avg by(hostname) (irate(node_cpu_seconds_total{mode=\"idle\", role=\"controller\"}[5m])) * 100)", "legendFormat": "{{hostname}}", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "percent", "max": 100}}
    },
    {
      "id": 5,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 4},
      "targets": [{"expr": "(1 - (node_memory_MemAvailable_bytes{role=\"controller\"} / node_memory_MemTotal_bytes{role=\"controller\"})) * 100", "legendFormat": "{{hostname}}", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "percent", "max": 100}}
    },
    {
      "id": 6,
      "title": "Disk Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 4},
      "targets": [{"expr": "(1 - (node_filesystem_avail_bytes{fstype!=\"tmpfs\", role=\"controller\", mountpoint=\"/\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\", role=\"controller\", mountpoint=\"/\"})) * 100", "legendFormat": "{{hostname}}", "refId": "A"}],
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "percent", "max": 100}}
    }
  ]
}
